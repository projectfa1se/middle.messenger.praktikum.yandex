<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Data</title>
    <link rel="stylesheet" href="chData.scss">
</head>
<body>
    <div class="wrapper">
        <div class="back-button__side">
            <img src="../../../static/icons/backbutton.svg" alt="">
        </div>
        <div class="data__container">
            <div class="data__avatar">
                <div class="data__avatar__overlay">
                     <div>Поменять</div>
                     <div>аватар</div>
                </div>
            </div>
            <div class="data__username">Иван</div>
            {{> dataBox/dataBox text="Почта" name="email" placeholder="pochta@yandex.ru"}}
            {{> dataBox/dataBox text="Логин" name="login" placeholder="ivanivanov"}}
            {{> dataBox/dataBox text="Имя" name="first_name" placeholder="Иван"}}
            {{> dataBox/dataBox text="Фамилия" name="second_name" placeholder="Иванов"}}
            {{> dataBox/dataBox text="Имя в чате" name="display_name" placeholder="Иван"}}
            {{> dataBox/dataBox text="Телефон" name="phone" placeholder="+7-(909)-967-30-30"}}
            {{> button/button text="Сохранить" }}
        </div>
    </div>
</body>
</html>